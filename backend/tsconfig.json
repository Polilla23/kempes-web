{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {},
    "typeRoots": ["./node_modules/@types", "./src/utils/types"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
