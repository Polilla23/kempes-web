generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id       String    @id @default(uuid())
  email    String    @unique
  password String
  role     RoleType? @default(USER)
  club     Club[]

  @@map("users")
}

model Club {
  id     String @id @default(uuid())
  name   String @unique
  logo   String
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("clubs")
}

enum RoleType {
  ADMIN
  USER
}
